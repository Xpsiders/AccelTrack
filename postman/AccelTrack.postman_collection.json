{
  "info": {
    "_postman_id": "acceltrack-collection",
    "name": "AccelTrack API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{baseUrl}}"
    },
    {
      "key": "token",
      "value": "{{token}}"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/auth/register", "host": [ "{{baseUrl}}" ], "path": [ "auth", "register" ] }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"Password123!\"\n}" },
            "url": { "raw": "{{baseUrl}}/auth/login", "host": [ "{{baseUrl}}" ], "path": [ "auth", "login" ] }
          }
        },
        {
          "name": "Me (current user)",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/auth/me", "host": [ "{{baseUrl}}" ], "path": [ "auth", "me" ] }
          }
        }
      ]
    },
    {
      "name": "Tests",
      "item": [
        {
          "name": "Get All Tests",
          "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/tests", "host": [ "{{baseUrl}}" ], "path": [ "tests" ] } }
        },
        {
          "name": "Get Test by ID",
          "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/tests/1", "host": [ "{{baseUrl}}" ], "path": [ "tests", "1" ] } }
        },
        {
          "name": "Create Test",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "body": { "mode": "raw", "raw": "{\n  \"subject\": \"Math\",\n  \"topic\": \"Algebra\",\n  \"testDate\": \"2025-12-31\",\n  \"testTime\": \"14:00\",\n  \"notes\": \"Chapter 1-4\"\n}" },
            "url": { "raw": "{{baseUrl}}/tests", "host": [ "{{baseUrl}}" ], "path": [ "tests" ] }
          }
        },
        {
          "name": "Update Test",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "body": { "mode": "raw", "raw": "{\n  \"topic\": \"Updated Topic\"\n}" },
            "url": { "raw": "{{baseUrl}}/tests/1", "host": [ "{{baseUrl}}" ], "path": [ "tests", "1" ] }
          }
        },
        {
          "name": "Delete Test",
          "request": { "method": "DELETE", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/tests/1", "host": [ "{{baseUrl}}" ], "path": [ "tests", "1" ] } }
        },
        {
          "name": "Get Upcoming Tests",
          "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/tests/upcoming", "host": [ "{{baseUrl}}" ], "path": [ "tests", "upcoming" ] } }
        }
      ]
    },
    {
      "name": "Schedules",
      "item": [
        { "name": "Get All Schedules", "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/schedules", "host": [ "{{baseUrl}}" ], "path": [ "schedules" ] } } },
        { "name": "Get Schedule by ID", "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/schedules/1", "host": [ "{{baseUrl}}" ], "path": [ "schedules", "1" ] } } },
        { "name": "Create Schedule", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ], "body": { "mode": "raw", "raw": "{\n  \"dayOfWeek\": \"MONDAY\",\n  \"subject\": \"Physics\",\n  \"startTime\": \"09:00\",\n  \"endTime\": \"10:00\",\n  \"room\": \"101\"\n}" }, "url": { "raw": "{{baseUrl}}/schedules", "host": [ "{{baseUrl}}" ], "path": [ "schedules" ] } } },
        { "name": "Update Schedule", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ], "body": { "mode": "raw", "raw": "{\n  \"room\": \"202\"\n}" }, "url": { "raw": "{{baseUrl}}/schedules/1", "host": [ "{{baseUrl}}" ], "path": [ "schedules", "1" ] } } },
        { "name": "Delete Schedule", "request": { "method": "DELETE", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/schedules/1", "host": [ "{{baseUrl}}" ], "path": [ "schedules", "1" ] } } },
        { "name": "Get Today Schedule", "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/schedules/today", "host": [ "{{baseUrl}}" ], "path": [ "schedules", "today" ] } } }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        { "name": "Register Device Token", "request": { "method": "POST", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ], "body": { "mode": "raw", "raw": "{\n  \"token\": \"device-token-sample\",\n  \"deviceType\": \"web\"\n}" }, "url": { "raw": "{{baseUrl}}/notifications/register-device", "host": [ "{{baseUrl}}" ], "path": [ "notifications", "register-device" ] } } },
        { "name": "Unregister Device Token", "request": { "method": "DELETE", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ], "body": { "mode": "raw", "raw": "{\n  \"token\": \"device-token-sample\"\n}" }, "url": { "raw": "{{baseUrl}}/notifications/unregister-device", "host": [ "{{baseUrl}}" ], "path": [ "notifications", "unregister-device" ] } } },
        { "name": "Get Notification Settings", "request": { "method": "GET", "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ], "url": { "raw": "{{baseUrl}}/notifications/settings", "host": [ "{{baseUrl}}" ], "path": [ "notifications", "settings" ] } } },
        { "name": "Update Notification Settings", "request": { "method": "PUT", "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ], "body": { "mode": "raw", "raw": "{\n  \"emailNotifications\": true,\n  \"pushNotifications\": true\n}" }, "url": { "raw": "{{baseUrl}}/notifications/settings", "host": [ "{{baseUrl}}" ], "path": [ "notifications", "settings" ] } } }
      ]
    }
  ]
}
